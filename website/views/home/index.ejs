<!DOCTYPE html>
<html>
  <%-  include('../includes/head.ejs') %>
  <body>

    <style>
      .space{
      margin: 5px;
      border: 5px;
      border-style: solid;
      border-color: rgb(160, 97, 38);
      border-radius: 15px;

    }
    </style>




    <h3 class="text-center m-5">Welcome to Book Review Website</h3>



      <div class="m-3">
        <% if (bookDetails) { %>
          <div class="container p-3 ">
            <div class = "row">
      
        <% bookDetails.forEach(function(item){ %>
          
          
          
          <div class = "col-sm-12 col-md-6 col-lg-4 p-3">             
            <div class="card space  h-20  space" onmouseover="hover(this)" onmouseout= "endHover(this) " >
            
              
              <% if (item.volumeInfo.imageLinks) { %>
                <img class="card-img-top img-responsive" src="<%= item.volumeInfo.imageLinks.smallThumbnail %>" alt="book image" height="300" >
                <% } %>  
                
              
            
             <div class="card-header"> <h2 class="text-center"><%= item.volumeInfo.title %></h2></div>
             <div class="card-body text-center"><h5><b>Authors</b> </h5>
                  <p><%= item.volumeInfo.authors%></p>  
                 
            </div> 
            <div class="card-footer">
                      
                      
                <a href="/book//bookDetails/<%= item.id %>" class="nav-item nav-link">Details</a>
                       </div>
                      
                   </div>
                 </div>
          
        <% }); %>
          </div>
          </div>
    
        <% } %>
        
      </div>





      <script>
        function hover(x) {
      x.style.border = "15px";
      x.style.borderStyle = "solid";
      x.style.borderRadius =  "50px";
      x.style.borderColor = "red";
          }


        function endHover (x) {
            x.style.border = "5px";
            x.style.borderStyle = "solid";
            x.style.borderRadius =  "15px";
            x.style.borderColor = "rgb(160, 97, 38)";
        }

      
    </script>
   




   
  </body>
</html>
